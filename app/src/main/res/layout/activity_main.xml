<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

  <!-- AR Surface View -->
  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <!-- Mode Selection Container (shown at start) -->
  <LinearLayout
      android:id="@+id/modeSelectionContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:padding="32dp"
      android:background="#F5F5F5"
      android:elevation="8dp"
      android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Inspection Mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the surface you want to inspect:"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 🏢Floor Button -->
    <Button
        android:id="@+id/btnInspectFloor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=" INSPECT FLOOR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- 🧱Wall Button -->
    <Button
        android:id="@+id/btnInspectWall"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=" INSPECT WALL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#FF5722"
        android:elevation="4dp" />
    <!-- 📐 Virtual Wall Button -->
    <Button
        android:id="@+id/btnInspectVirtualWall"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=" INSPECT VIRTUAL WALL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#9C27B0"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip: Point camera at floor/wall to detect surfaces"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />
  </LinearLayout>

  <!-- Settings Button -->
  <ImageButton
      android:id="@+id/settings_button"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_margin="16dp"
      android:background="@drawable/rounded_bg_translucent"
      android:contentDescription="Settings"
      android:padding="12dp"
      android:src="@drawable/ic_settings" />
  <!-- Height Input Card for Virtual Wall -->
  <androidx.cardview.widget.CardView
      android:id="@+id/cardHeightInput"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="120dp"
      android:visibility="gone"
      app:cardCornerRadius="12dp"
      app:cardElevation="8dp"
      app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Enter Room Height"
          android:textSize="18sp"
          android:textStyle="bold"
          android:textColor="#212121"
          android:layout_marginBottom="16dp" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical">

        <EditText
            android:id="@+id/etRoomHeight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="2.5"
            android:text="2.5"
            android:textSize="24sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meters"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginStart="12dp" />
      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="(Typical: 2.4m - 3.0m)"
          android:textSize="12sp"
          android:textColor="#9E9E9E"
          android:layout_marginTop="8dp" />

      <Button
          android:id="@+id/btnConfirmHeight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="CONFIRM HEIGHT"
          android:textColor="@android:color/white"
          android:background="#4CAF50"
          android:layout_marginTop="16dp"
          android:padding="12dp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <!-- Corner Hints Container -->
  <LinearLayout
      android:id="@+id/cornerHintsContainer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="80dp"
      android:background="@drawable/rounded_bg_translucent"
      android:elevation="4dp"
      android:orientation="horizontal"
      android:padding="12dp"
      android:visibility="gone">

    <View
        android:id="@+id/cornerIndicator1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator_empty" />

    <View
        android:id="@+id/cornerIndicator2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator_empty" />

    <View
        android:id="@+id/cornerIndicator3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator_empty" />

    <View
        android:id="@+id/cornerIndicator4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator_empty" />
  </LinearLayout>

  <!-- Grid Info Card -->
  <androidx.cardview.widget.CardView
      android:id="@+id/cardGridInfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="80dp"
      android:visibility="gone"
      app:cardBackgroundColor="#FFFFFF"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <TextView
          android:id="@+id/tvGridSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="4×4 Grid Active"
          android:textColor="#212121"
          android:textSize="16sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/tvVisitedCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0 of 16 cells visited"
          android:textColor="#4CAF50"
          android:textSize="14sp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <!-- Distance Card -->
  <androidx.cardview.widget.CardView
      android:id="@+id/cardDistance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/bottomButtonContainer"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="16dp"
      android:visibility="gone"
      app:cardBackgroundColor="#FFFFFF"
      app:cardCornerRadius="8dp"
      app:cardElevation="4dp">

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Distance: 0.0m"
        android:textColor="#212121"
        android:textSize="14sp" />
  </androidx.cardview.widget.CardView>

  <!-- Instructions TextView -->
  <TextView
      android:id="@+id/tvInstructions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/bottomButtonContainer"
      android:layout_marginBottom="16dp"
      android:background="@drawable/rounded_bg_translucent"
      android:elevation="4dp"
      android:gravity="center"
      android:padding="16dp"
      android:text="Tap to place corner anchor 1 of 4"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:visibility="gone" />

  <!-- Bottom Button Container -->
  <LinearLayout
      android:id="@+id/bottomButtonContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:padding="16dp"
      android:gravity="center">

    <!-- View Captured Button -->
    <Button
        android:id="@+id/btnViewCaptured"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="#FF9800"
        android:elevation="4dp"
        android:text="VIEW"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Capture Button -->
    <Button
        android:id="@+id/btnCapture"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="#4CAF50"
        android:elevation="4dp"
        android:text="CAPTURE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Done Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#2196F3"
        android:elevation="4dp"
        android:text="DONE"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />
  </LinearLayout>

</RelativeLayout>