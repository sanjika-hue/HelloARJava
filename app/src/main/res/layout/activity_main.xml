<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

  <!-- AR Camera Preview -->
  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <!-- Top Bar Container -->
  <LinearLayout
      android:id="@+id/topBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:orientation="horizontal"
      android:padding="16dp"
      android:background="@drawable/gradient_top_bar">

    <!-- Instructions Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textColor="#80FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to place corner anchor 1 of 4"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="2dp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Settings Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

      <ImageButton
          android:id="@+id/settings_button"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_settings"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:padding="12dp"
          android:tint="#FFFFFF"
          android:contentDescription="Settings" />
    </androidx.cardview.widget.CardView>

    <!-- Capture Button - CHANGED TO REGULAR BUTTON -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

      <Button
          android:id="@+id/btnCapture"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="START"
          android:textColor="#FFFFFF"
          android:textSize="12sp"
          android:textStyle="bold"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          android:background="?attr/selectableItemBackground"
          android:minWidth="80dp" />
    </androidx.cardview.widget.CardView>
  </LinearLayout>

  <!-- Distance Indicator (Optional) -->
  <androidx.cardview.widget.CardView
      android:id="@+id/cardDistance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/topBar"
      android:layout_alignParentEnd="true"
      android:layout_margin="16dp"
      android:visibility="gone"
      app:cardBackgroundColor="#E6000000"
      app:cardCornerRadius="12dp"
      app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:minWidth="100dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DISTANCE"
          android:textColor="#80FFFFFF"
          android:textSize="10sp"
          android:textStyle="bold"
          android:letterSpacing="0.1" />

      <TextView
          android:id="@+id/tvDistance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="0.0 m"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="4dp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <!-- Bottom Action Bar -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      android:padding="20dp"
      android:background="@drawable/gradient_bottom_bar">

    <!-- Grid Info Banner (shown after grid creation) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGridInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="16dp"
          android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="#4CAF50" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

          <TextView
              android:id="@+id/tvGridSize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="10Ã—10 Grid Active"
              android:textColor="#FFFFFF"
              android:textSize="14sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvVisitedCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0 cells visited"
              android:textColor="#80FFFFFF"
              android:textSize="12sp"
              android:layout_marginTop="2dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:tint="#80FFFFFF" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main Action Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="DONE"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:background="@drawable/button_primary"
        android:textColor="#FFFFFF"
        android:elevation="8dp"
        style="?android:attr/buttonStyle" />
  </LinearLayout>

  <!-- Corner Placement Hints (optional floating indicators) -->
  <LinearLayout
      android:id="@+id/cornerHintsContainer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="horizontal"
      android:padding="12dp"
      android:visibility="gone">

    <View
        android:id="@+id/cornerIndicator1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator" />

    <View
        android:id="@+id/cornerIndicator2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator" />

    <View
        android:id="@+id/cornerIndicator3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator" />

    <View
        android:id="@+id/cornerIndicator4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/corner_indicator" />

  </LinearLayout>

</RelativeLayout>